<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="16dp"
  android:orientation="vertical"
  tools:ignore="MissingPrefix">

  <ScrollView
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:layout_margin="16dp"
	  android:orientation="vertical"
	  android:padding="16dp">

	  <EditText
		android:id="@+id/etEmail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/storke"
		android:hint="Email"
		android:drawableStart="@drawable/mail"
		android:drawablePadding="8dp"
		android:inputType="textEmailAddress"
		android:padding="16dp"
		android:textColor="#5f6368"
		android:textColorHint="#9e9e9e"
		android:textSize="16sp"
		/>

	  <EditText
		android:layout_marginTop="32dp"
		android:id="@+id/etPhoneNumber"
		  android:maxLength="10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Mobile Number"
		android:background="@drawable/storke"
		android:drawableStart="@drawable/smartphone"
		android:drawablePadding="8dp"
		android:padding="16dp"
		android:inputType="phone"
		android:textColor="#5f6368"
		android:textColorHint="#9e9e9e"
		android:textSize="16sp"

		/>

	  <EditText
		android:layout_marginTop="32dp"
		android:id="@+id/referral"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/referral"
		android:background="@drawable/storke"
		android:drawableStart="@drawable/password_left"
		android:drawablePadding="8dp"
		android:padding="16dp"
		android:inputType="phone"
		android:textColor="#5f6368"
		android:textColorHint="#9e9e9e"
		android:textSize="16sp"
		/>

	  <EditText
		android:id="@+id/etOtp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:background="@drawable/storke"
		android:drawableStart="@drawable/password_left"
		android:drawablePadding="8dp"
		android:hint="Otp"
		android:inputType="textPersonName"
		android:padding="16dp"
		android:textColor="#5f6368"
		android:textColorHint="#9e9e9e"
		android:textSize="16sp" />

	  <LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginTop="16dp"
		android:layout_height="wrap_content">

		<CheckBox
		  android:id="@+id/tc"
		  android:minWidth="0dp"
		  android:minHeight="0dp"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"/>

		<TextView
		  android:id="@+id/terms"
		  android:layout_marginHorizontal="4dp"
		  tools:text="asdkjsdfhjkdsb kasdbfghkjsad gfkjsdhfklasdhfk lsdhfk"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"/>

	  </LinearLayout>

	  <TextView
		android:id="@+id/bNext"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/rectangle_green_round"
		android:fontFamily="@font/poppins_medium"
		android:gravity="center"
		android:padding="16dp"
		android:text="GET OTP"
		android:textStyle="bold"
		android:textAllCaps="false"
		android:textColor="#ffffff"
		android:textSize="16sp"
		tools:ignore="MissingPrefix" />

	</LinearLayout>
  </ScrollView>

</LinearLayout>